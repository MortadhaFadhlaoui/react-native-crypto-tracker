{
	"name": "reactnativetdd",
	"version": "1.0.0",
	"scripts": {
		"start": "expo start --dev-client",
		"start:cache": "expo start --dev-client -c",
		"android": "expo run:android",
		"ios": "expo run:ios",
		"web": "expo start --web",
		"prettier:format": "prettier --config .prettierrc '**/*.{ts,tsx,js,json}' --write",
		"lint": "eslint . --ext .ts,.tsx,.js,.jsx,.json",
		"lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.json --fix",
		"lint:stage": "yarn prettier:format && yarn lint",
		"test": "jest __tests__/*",
		"test:watch": "yarn test --watch",
		"test:ci": "yarn test --coverage",
		"chmod +x eas-build-pre-install": "./eas-hooks/eas-build-pre-install.sh",
		"chmod +x eas-build-on-success": "./eas-hooks/eas-build-on-success.sh",
		"e2e:test": "detox test -c  android.emu.release"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint:stage"
		}
	},
	"dependencies": {
		"@react-navigation/native": "^6.1.2",
		"@react-navigation/stack": "^6.3.11",
		"axios": "^1.2.2",
		"expo": "~47.0.12",
		"expo-dev-client": "~2.0.1",
		"expo-splash-screen": "~0.17.5",
		"expo-status-bar": "~1.4.2",
		"expo-system-ui": "~2.0.1",
		"react": "18.1.0",
		"react-dom": "18.1.0",
		"react-native": "0.70.5",
		"react-native-gesture-handler": "~2.8.0",
		"react-native-responsive-fontsize": "^0.5.1",
		"react-native-responsive-screen": "^1.4.2",
		"react-native-safe-area-context": "^4.4.1",
		"react-native-screens": "~3.18.0",
		"react-native-svg": "13.4.0",
		"react-native-web": "~0.18.9"
	},
	"devDependencies": {
		"@babel/core": "^7.12.9",
		"@config-plugins/detox": "^4.0.0",
		"@testing-library/jest-native": "^5.4.0",
		"@testing-library/react-native": "^11.5.0",
		"@types/jest": "^29.4.0",
		"@types/react-native": "~0.70.6",
		"@typescript-eslint/eslint-plugin": "^5.48.0",
		"@typescript-eslint/parser": "^5.48.0",
		"detox": "^20.1.2",
		"eslint": "^8.31.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-config-react": "^1.1.7",
		"eslint-plugin-jest": "^27.2.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.31.11",
		"husky": "^8.0.3",
		"jest": "^29.4.1",
		"jest-expo": "^47.0.1",
		"prettier": "^2.8.1",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1",
		"typescript": "^4.6.3"
	},
	"private": true
}
