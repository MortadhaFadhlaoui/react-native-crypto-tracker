{
	"name": "reactnativetdd",
	"version": "1.0.0",
	"main": "node_modules/expo/AppEntry.js",
	"scripts": {
		"start": "expo start -c",
		"android": "expo start --android",
		"ios": "expo start --ios",
		"web": "expo start --web",
		"prettier:format": "prettier --config .prettierrc '**/*.{ts,tsx,js,json}' --write",
		"lint": "eslint . --ext .ts,.tsx,.js,.jsx,.json",
		"lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.json --fix",
		"lint:stage": "yarn prettier:format && yarn lint",
		"test": "jest test/*",
		"test:watch": "yarn test --watch",
		"test:ci": "yarn test --coverage"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint:stage"
		}
	},
	"dependencies": {
		"@types/jest": "^29.2.5",
		"expo": "~47.0.9",
		"expo-status-bar": "~1.4.2",
		"react": "18.1.0",
		"react-dom": "18.1.0",
		"react-native": "0.70.5",
		"react-native-web": "~0.18.9"
	},
	"devDependencies": {
		"@babel/core": "^7.12.9",
		"@testing-library/jest-native": "^5.4.0",
		"@testing-library/react-native": "^11.5.0",
		"@types/react": "^18.0.26",
		"@types/react-native": "~0.70.6",
		"@typescript-eslint/eslint-plugin": "^5.48.0",
		"@typescript-eslint/parser": "^5.48.0",
		"detox": "^20.1.1",
		"detox-expo-helpers": "^0.6.0",
		"eslint": "^8.31.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-config-react": "^1.1.7",
		"eslint-plugin-jest": "^27.2.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.31.11",
		"expo-detox-hook": "^1.0.10",
		"husky": "^8.0.3",
		"jest": "^29.3.1",
		"jest-expo": "^47.0.1",
		"prettier": "^2.8.1",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1",
		"typescript": "^4.6.3"
	},
